<ruleset>
	<!--
		This file is part of the Spelling and Grammar Checker project.
		See the accompanying LICENSE file for applicable licenses.
	-->
	<level id="fatal">
		<!-- Fatal rules will fail validation (cannot be overriden)-->
		<rule>blacklisted-word</rule>
	</level>
	<level id="error">
		<!-- Error rules will fail validation (can be overriden)-->
		<rule>duplicated-punctuation</rule>
		<rule>duplicated-words</rule>
		<rule>incorrect-capitalization</rule>
		<rule>incorrect-grammar</rule>
		<rule>incorrect-punctuation</rule>
		<rule>incorrect-spelling</rule>
	</level>
	<level id="warning">
		<!-- Warning rules will display a warning on validation (can be overriden)-->
		<rule>a-followed-by-vowel</rule>
		<rule>an-followed-by-consonant</rule>
		<rule>latin-abbreviation</rule>
		<rule>sentence-capitalization</rule>
		<rule>split-infinitive</rule>
		<rule>where-not-were</rule>
	</level>
	<level id="inactive">
		<!-- Inactive rules will never be applied -->
	</level>
</ruleset>